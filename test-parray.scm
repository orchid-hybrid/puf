(import (scheme base)
        (scheme write)
        (persistent array))

(define (print p) (display p) (newline))

(begin
  (print "testing parray")
  (let* ((a1 (parray-allocate 10 'o))
         (a2 #f))
    (print 'a)
    (unless (eq? 'o (parray-get a1 0))
            (print "fail 1"))
    (print 'b)
    (unless (eq? 'o (parray-get a1 1))
            (print "fail 2"))
    (print 'c)
    (set! a2 (parray-set a1 0 'x))
    (print 'd)
    (unless (eq? 'o (parray-get a1 0))
            (print "fail 3"))
    (print 'e)
    (unless (eq? 'o (parray-get a1 1))
            (print "fail 4"))
    (print 'f)
    (unless (eq? 'x (parray-get a2 0))
            (print "fail 5")))
  (let* ((a0 (parray-allocate 7 0))
         (tmp0 (print 'tmp0))
         (a1 (parray-set a0 1 7))
         (tmp0 (print 'tmp1))
         (a2 (parray-set a1 2 8))
         (tmp0 (print 'tmp2))
         (a3 (parray-set a1 2 9)))
    (print 'g)
    (unless (equal? (list (parray-get a0 0)
                          (parray-get a0 1)
                          (parray-get a0 2))
                    '(0 0 0))
            (print "fail 6"))
    (print 'h)
    (unless (equal? (list (parray-get a1 0)
                          (parray-get a1 1)
                          (parray-get a1 2))
                    '(0 7 0))
            (print "fail 7"))
    (print 'i)
    (unless (equal? (list (parray-get a2 0)
                          (parray-get a2 1)
                          (parray-get a2 2))
                    '(0 7 8))
            (print "fail 8"))
    (print 'j)
    (unless (equal? (list (parray-get a3 0)
                          (parray-get a3 1)
                          (parray-get a3 2))
                    '(0 7 9))
            (print "fail 9")))
  (print "all tests pass")
  (newline))
